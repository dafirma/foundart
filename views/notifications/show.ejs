<div>
    <%  article.rent.forEach((rent) => { %>
        <% if(rent._id == rentId){ %>
            <% const thisRent = rent;%>
            <p>Title:
                    <%- article.title%>
                </p>
                <p>Date start:
                    <%- rent.dateStart%>
                </p>
                <p>Date end:
                    <%- rent.dateEnd%>
                </p>
                <p>Price by day:
                    <%- article.price%>
                </p>
                
                <form action="/notifications/update" method="post">
                    <input type="hidden" value="<%- article._id%>" name="articleId" >
                    <input type="hidden" value="<%- rent._id%>" name="rentId" >
                    <button type="submit" name="state" value="true">ACCEPT</button>
                    <button type="submit" name="state" value="false">REJECT</button>
                </form>
        <% } %>
    <%})%>
    
</div>